<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/Content/eliteadmin/plugins/images/favicon.png")">
    <title>WSI - @ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/eliteadmin/bootstrap/dist/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/eliteadmin/plugins/bower_components/bootstrap-extension/css/bootstrap-extension.css")" rel="stylesheet">
    <!-- animation CSS -->
    <link href="@Url.Content("~/Content/eliteadmin/css/animate.css")" rel="stylesheet">
    <!-- Menu CSS -->
    <link href="@Url.Content("~/Content/eliteadmin/plugins/bower_components/sidebar-nav/dist/sidebar-nav.css")" rel="stylesheet">
    <!-- animation CSS -->
    <link href="@Url.Content("~/Content/eliteadmin/css/animate.css")" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/eliteadmin/css/style.css")" rel="stylesheet">
    <!-- color CSS -->
    <link href="@Url.Content("~/Content/eliteadmin/css/colors/gray-dark.css")" id="theme" rel="stylesheet">
    <!-- Date picker plugins css -->
    <link href="@Url.Content("~/Content/eliteadmin/plugins/bower_components/bootstrap-datepicker/bootstrap-datepicker.min.css")" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@


    <script src="@Url.Content("~/Content/eliteadmin/plugins/bower_components/jquery/dist/jquery.js")"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/Content/eliteadmin/bootstrap/dist/js/tether.min.js")"></script>
    <script src="@Url.Content("~/Content/eliteadmin/bootstrap/dist/js/bootstrap.js")"></script>
</head>



<body>
    <!-- Preloader -->
    @*<div class="preloader">
            <div class="cssload-speeding-wheel"></div>
        </div>*@
    <div class="preload">
        <img src="@Url.Content("~/Content/loadingpage.gif")">
    </div>

    <div id="wrapper">
        <!-- Top Navigation -->
        <nav class="navbar navbar-default navbar-static-top m-b-0">
            <div class="navbar-header">
                <a class="navbar-toggle hidden-sm hidden-md hidden-lg " href="javascript:void(0)" data-toggle="collapse" data-target=".navbar-collapse"><i class="ti-menu"></i></a>
                <div class="top-left-part"><a class="logo" href="@Url.Action("Index", "Home")"><b><img src="@Url.Content("~/Content/eliteadmin/plugins/images/eliteadmin-logo.png")" alt="home" /></b>@*<span class="hidden-xs"><img src="../plugins/images/eliteadmin-text.png" alt="home" /></span>*@</a></div>
                <ul class="nav navbar-top-links navbar-left hidden-xs">
                    <li><a href="javascript:void(0)" class="open-close hidden-xs waves-effect waves-light"><i class="icon-arrow-left-circle ti-menu"></i></a></li>

                </ul>

                @Html.Partial("_LoginPartial")


            </div>
            <!-- /.navbar-header -->
            <!-- /.navbar-top-links -->
            <!-- /.navbar-static-side -->
        </nav>
        <!-- End Top Navigation -->
        <!-- Left navbar-header -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse slimscrollsidebar">
                <ul class="nav" id="side-menu">
                    <li class="nav-small-cap m-t-10">@*--- Main Menu*@</li>
                    @if (Portal.Helpers.Sessions.UserID.ToString() != "")
                    {

                        if (Portal.Helpers.Sessions.UserType.ToString() == "Reseller")
                        {
                            <li><a href="@Url.Action("Details", "Resellers",new {id = Portal.Helpers.Sessions.ResellerID })" class="waves-effect a-loading"><i class="fa fa-user"></i> <span class="hide-menu">Profile</span></a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Index", "Resellers")" class="waves-effect a-loading"><i class="fa fa-user"></i> <span class="hide-menu">Resellers</span></a></li>

                        }

                        @*<li><a href="@Url.Action("Index", "Offers")" class="waves-effect a-loading"><i class="fa fa-file-text-o"></i> <span class="hide-menu">Offers</span></a></li>*@
                        <li><a href="@Url.Action("Index", "Customers")" class="waves-effect a-loading"><i class="fa fa-users"></i> <span class="hide-menu">Customers</span></a></li>
                        <li><a href="@Url.Action("Index", "Orders")" class="waves-effect a-loading"><i class="fa fa-list"></i> <span class="hide-menu">Orders</span></a></li>
                        if (Portal.Helpers.Sessions.UserID.ToString() != "1")
                        {
                            <li><a href="@Url.Action("Index", "Tickets")" class="waves-effect a-loading"><i class="fa fa-ticket"></i> <span class="hide-menu">Tickets</span></a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Admin", "Tickets")" class="waves-effect a-loading"><i class="fa fa-ticket"></i> <span class="hide-menu">Tickets</span></a></li>
                            
                        }

                    }
                    @if (Portal.Helpers.Sessions.UserType.ToString() == "Admin")
                    {

                    <li>
                        <a href="#" class="waves-effect"><i data-icon=")" class="fa fa-cog"></i> <span class="hide-menu">Management <span class="fa arrow"></span></span></a>
                        <ul class="nav nav-second-level">     
                           
                            <li><a href="@Url.Action("Index", "Users")">Users</a></li>
                          
                            <li><a href="@Url.Action("Tagging", "UserTagging")" >User Tagging</a></li>              
                            
                            <li><a href="@Url.Action("TermsandConditions", "Utils")">Terms and Conditions</a></li>

                            <li><a href="@Url.Action("Index", "EmailTemplates")">Email Templates</a></li>
                        </ul>
                    </li>
                    }

                    @*<li><a href="@Url.Action("Login", "Home")" class="waves-effect"><i class="icon-logout fa-fw"></i> <span class="hide-menu">Log out</span></a></li>*@
                </ul>
            </div>
        </div>
        <!-- Left navbar-header end -->
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">

                @RenderBody()


            </div>
            <!-- /.container-fluid -->
            <footer class="footer text-center"> 2018 &copy; Wordtext Systems, Inc. </footer>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="@Url.Content("~/Content/eliteadmin/plugins/bower_components/bootstrap-extension/js/bootstrap-extension.min.js")"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="@Url.Content("~/Content/eliteadmin/plugins/bower_components/sidebar-nav/dist/sidebar-nav.js")"></script>
    <!--slimscroll JavaScript -->
    <script src="@Url.Content("~/Content/eliteadmin/js/jquery.slimscroll.js")"></script>
    <!--Wave Effects -->
    <script src="@Url.Content("~/Content/eliteadmin/js/waves.js")"></script>
    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/Content/eliteadmin/js/custom.js")"></script>
    <script src="@Url.Content("~/Content/eliteadmin/js/jasny-bootstrap.js")"></script>
    <!--Style Switcher -->
    <script src="@Url.Content("~/Content/eliteadmin/plugins/bower_components/styleswitcher/jQuery.style.switcher.js")"></script>

    <!-- Date Picker Plugin JavaScript -->
    <script src="@Url.Content("~/Content/eliteadmin/plugins/bower_components/bootstrap-datepicker/bootstrap-datepicker.min.js")"></script>

    <script>

        //loading

        $(".preload").fadeOut(500, function () {
            $("#wrapper").fadeIn(1000);
        });


        $("#side-menu li a.a-loading").click(function () {
            $(".preload").show();
        });


        //$("#page-wrapper a").click(function () {
        //    $(".preload").show();
        //});

        $("#page-wrapper a.btn").click(function () {
            $(".preload").show();
        });

        // Date Picker
        $('.mydatepicker, #datepicker').datepicker();

    </script>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
