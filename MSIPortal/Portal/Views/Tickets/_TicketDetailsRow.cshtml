@model Portal.Models.TicketDetails

<tr class="item-row">
    <td hidden="hidden">
        <label class="id" hidden="hidden">@Model.id</label>
    </td>
    <td>
        @Model.Date
    </td>
    <td>
        @Model.Remarks
    </td>
    <td>
     
           @Model.Users.FirstName @Model.Users.LastName

       
    </td>
   
    <td class="text-center">
        <a href="#!" data-toggle="tooltip" data-original-title="Remove" class="btn btn-inverse btn-xs btnRemoveItem"><i class="fa fa-times fa fa-white"></i></a>
        
    </td>
</tr>

<script>
    $(function () {
        $('.btnRemoveItem').click(function () {

            var Ticket = new Object();
            $row = $(this).closest('tr.item-row');

            $id = $row.find('.id').text();
          
            $.ajax({
                url: "/Tickets/DeleteTicketDetails",
                type: "POST",
                data: "{'ticketid' : '" + $id + "'}",
                contentType: "application/json; charset=utf-8",
                success: function (r) {
                
                    window.location.href = "/Tickets/Edit/"+@Model.TicketID;
                }
            });
            

        });

    }); //  arrival


</script>