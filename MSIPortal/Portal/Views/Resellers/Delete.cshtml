@model Portal.Models.ResellerAccount

@{
    ViewBag.Title = "Delete";
}



<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Resellers</h4>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">Delete - Are you sure you want to delete this?</div>
            <div class="panel-wrapper collapse in" aria-expanded="true">
                <div class="panel-body">
                    <div class="form">


                        <div class="form-group row">
                            <label class="col-2 col-form-label">MPN ID</label>
                                <div class="col-5">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Reseller.MPNID)</p>
                                </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-2 col-form-label">Reseller Name
                                <div class="col-5">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Reseller.ResellerName)</p>
                                </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-2 col-form-label">@Html.DisplayNameFor(model => model.Reseller.Emails)</label>
                            <div class="col-5">
                                <p class="form-control-static">@Html.DisplayFor(model => model.Reseller.Emails)</p>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-2 col-form-label">Reseller Status</label>
                                <div class="col-5">
                                    <p class="form-control-static">
                                        @ViewBag.Status
                                    </p>
                                </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-2 col-form-label">@Html.DisplayNameFor(model => model.User.username)</label>
                            <div class="col-5">
                                <p class="form-control-static">@Html.DisplayFor(model => model.User.username)</p>
                            </div>
                        </div>

                       @using (Html.BeginForm())
                       {
                        @Html.AntiForgeryToken()

                        <div class="form-group m-b-0">
                            <div class="offset-sm-2 col-sm-9">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                <a href="@Url.Action("Index")" class="btn btn-inverse">Back</a>
                            </div>
                        </div>
                       }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--./row-->

