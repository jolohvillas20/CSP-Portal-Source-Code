@model Portal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="login-box login-sidebar">
        <div class="white-box">
            <div class="form-horizontal form-material" id="loginform">
                <a href="javascript:void(0)" class="text-center db">
                    <img src="@Url.Content("~/Content/eliteadmin/plugins/images/eliteadmin-logo-dark.png")" alt="Home" />
                    @*<br /><img src="@Url.Content("~/Content/eliteadmin/plugins/images/eliteadmin-text-dark.png")" alt="Home" />*@
                </a>

                <h3 class="box-title m-b-10 m-t-20">Forgot Password</h3>


                @Html.ValidationSummary("", new { @class = "", @style = "display:block;" })

                <div class="form-group m-t-40">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">@*text-dark pull-right*@ @*fa fa-lock m-r-5*@
                        <a href="@Url.Action("Login")" id="to-recover" class=""><i class=""></i> Login?</a>
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Send Email</button>
                    </div>
                </div>

            </div>

        </div>
    </div>




}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
